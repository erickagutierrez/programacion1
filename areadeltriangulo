// areatriangulo.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include "conio.h"
#include "stdio.h"
#include "math.h"
#include<iostream>
using namespace std;
int main ()
{
float a,b,c,p,Area;

cout << "Ingrese lado a: ";
cin >> a;

cout << "Ingrese lado b: ";
cin >> b;

cout << "Ingrese lado c: ";
cin >> c;

p = (a+b+c)/2;
Area = (1/2 * (p*((p-a)*(p-b)*(p-c))));

cout << "El area es: " << Area;


getch();
return 0;
}
